{
    "manifest_version": 2,
    "name": "Company Check Plugin",
    "description": "This extension will analyze a company's ethical and sustainability choices.",
    "version": "1.0",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "https://www.google.com/*"
    ]
}